<head>
     <%= stylesheet_link_tag 'question' %>
</head>

<!-- Question -->
<%= question.description %> 
<br>

<!-- Choices Data -->
<% choices = question.choices.order('votes DESC') %>
<% if cookies[:voted_questions].to_s.include?(question.id.to_s) %>
        <% choices_graph_data = {} %>
        <% choice_bar_colors = [] %>
        <% choices.each do |choice| %>
            <% choices_graph_data[choice.name] = choice.vote_percentage(question.total_votes) %>
            <% choice_bar_colors << choice.bar_color %>
        <% end %>
        <!-- vote results chart -->
        <div style="width: 500px">
            <%= bar_chart(choices_graph_data, colors: choice_bar_colors) %>
            Voted!
        </div>
<% else %>
    <%= form_for :question, as: :choice_id, url: question_choice_url(question, :choice_id), method: :patch do |f| %>
        <% choices.each do |choice| %>
            <div>
                <%= f.radio_button :choice_id, choice.id %>
                <% if choice.votes == 1 %>
                    <%= choice.name %> 
                <% else %>
                    <%= choice.name %> 
                <% end %>
            </div>
        <% end %>
        <%= f.submit "Vote" %>
    <% end %>
<% end %>
<br><br><br><br>
